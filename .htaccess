<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Allow direct access to files and directories that exist
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite all requests to backend/index.php if they start with /backend/
    RewriteRule ^backend/(.*)$ backend/index.php [L,QSA]

    # If the request is not for a file or directory, and not for backend, rewrite to frontend/index.html
    # This handles your single-page application routing for the frontend
    RewriteRule ^((?!backend/).*)$ frontend/index.html [L]
</IfModule>
